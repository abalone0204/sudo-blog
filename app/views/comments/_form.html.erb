<%= form_for([@post, @post.comments.build], :remote => true) do |f| %>
	<%= f.label :name,'名稱' %><br>
	<%= f.text_field :name %><br>
	<br>
	<%= f.label :body,'內容' %><br>
	<%= f.text_area :body, class:'materialize-textarea' %><br>
	<br>
	<%= f.submit '送出',class: 'btn',id: 'comment-button' %>
<% end %>
